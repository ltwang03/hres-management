<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    style="@style/ScreenBackground"
    android:theme="@style/AppTheme"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imv"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_without_title" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Welcome Back "
        style="@style/TextColor"
        android:textSize="45dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>
    <!--        android:fontFamily="@font/urbanist_regular"/>-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Restaurant"
            style="@style/TextColor"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:ignore="TextSizeCheck" />
        <!--            android:fontFamily="@font/urbanist_bold"-->


        <EditText
            android:id="@+id/lrestaurantID"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:hint="Enter your Restaurant ID !"
            android:inputType="text"
            android:maxEms="3"
            android:minHeight="48dp"
            style="@style/TextColor"
            android:textColorHint="#716966" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            style="@style/TextColor"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/ltvSignup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:ems="10"
            android:hint="Enter your UserName !"
            android:inputType="text"
            android:minHeight="48dp"
            style="@style/TextColor"
            android:textColorHint="#716966" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            style="@style/TextColor"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:ignore="TextSizeCheck" />

        <EditText
            android:id="@+id/lpassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:ems="10"
            android:hint="Enter your Pasword !"
            android:longClickable="false"
            android:inputType="textPassword"
            android:drawableRight="@drawable/baseline_visibility_off_24"
            android:minHeight="48dp"
            style="@style/TextColor"
            android:textColorHint="#716966" />

        <CheckBox
            android:id="@+id/lcbRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Remember"
            style="@style/TextColor"
            android:textStyle="bold"
            app:buttonTint="#716966" />
    </LinearLayout>

    <Button
        android:id="@+id/lbtnSignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_primary"
        android:text="Sign in"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:backgroundTint="#A4634D" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Don't have an account?"
            android:textSize="17dp"
            style="@style/TextColor"/>

        <TextView
            android:id="@+id/ltvSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            style="@style/TextColor"
            android:textSize="23dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>