<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListStaffActivity"
    android:orientation="vertical"
    android:layout_weight="40">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        android:padding="10dp"
        android:text="Danh sách Món ăn"
        style="@style/EditNameMenu"
        android:textSize="40dp"/>

    <LinearLayout
        android:id="@+id/type_food"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="33"
        android:orientation="vertical"

        tools:ignore="InvalidId">
        <LinearLayout
            android:id="@+id/khaivi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_typefood"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/khaivi"/>
                <TextView
                    android:id="@+id/name_type"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:textSize="33dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/orange_03"
                    android:layout_toRightOf="@id/img_typefood"
                    android:text="Khai vị"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@drawable/next_ic" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvFood1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/monchinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:ignore="InvalidId">
            <ImageView
                android:id="@+id/img_typefood"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/monchinh"/>
            <TextView
                android:id="@+id/name_type"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="33dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textColor="@color/orange_03"
                android:layout_toRightOf="@id/img_typefood"
                android:text="Món chính"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/next_ic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trangmieng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:ignore="InvalidId">
            <ImageView
                android:id="@+id/img_typefood"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/trangmieng"/>
            <TextView
                android:id="@+id/name_type"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="33dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textColor="@color/orange_03"
                android:layout_toRightOf="@id/img_typefood"
                android:text="Tráng miệng"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/next_ic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/drinks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:ignore="InvalidId">
            <ImageView
                android:id="@+id/img_typefood"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/drinks"/>
            <TextView
                android:id="@+id/name_type"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:textSize="33dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textColor="@color/orange_03"
                android:layout_toRightOf="@id/img_typefood"
                android:text="Nước giải khát"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/next_ic" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        layout="@layout/activity_toolbar_below"/>

</LinearLayout>