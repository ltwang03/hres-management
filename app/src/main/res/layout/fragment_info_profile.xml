<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ScreenBackground"
    tools:context=".Fragment.InfoProfileFragment">

        <LinearLayout
            android:id="@+id/lnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_idres"/>
                <TextView
                    android:id="@+id/tv_idRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextColor"
                    android:textColor="@color/greyDark"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="28dp"/>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_fullname"/>
                <TextView
                    android:id="@+id/tv_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyDark"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center"
                    android:text=""
                    style="@style/TextColor"
                    android:textSize="28dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_username"/>

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyDark"
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    style="@style/TextColor"
                    android:text=""
                    android:textSize="28dp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_phone"/>
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:textColor="@color/greyDark"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="center"
                    style="@style/TextColor"
                    android:text=""
                    android:textSize="28dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/line"/>
            <Button
                android:id="@+id/btn_sign_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textSize="28dp"
                android:textColor="@color/orange_01"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/button_sign_out"
                />
            <Button
                android:id="@+id/btn_editFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Edit Profile"
                android:textSize="28dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/button_primary"
                android:backgroundTint="@color/orange_01"/>

        </LinearLayout>
</FrameLayout>