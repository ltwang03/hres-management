<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StaffInformationActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingVertical="20dp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/orange_03"
        android:text="Thông tin nhân viên"
        android:layout_marginBottom="30dp"

        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginVertical="30dp"
        android:layout_gravity="center"

        android:src="@drawable/duywibu"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Họ tên" />
        <EditText
            android:id="@+id/edt_staff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": Nguyễn Thị Mắm"
            android:background="@drawable/delete_underline"
            android:textSize="25dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvSDT"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="SĐT" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": 0123456789"
            android:background="@drawable/delete_underline"
            android:textSize="25dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvRole"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Chức vụ" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": Manager"
            android:textSize="25dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUpdateStaffInfo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:textSize="20dp"
            android:text="Update" />

        <Button
            android:id="@+id/btnDeleteStaff"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Delete" />
    </LinearLayout>

</LinearLayout>